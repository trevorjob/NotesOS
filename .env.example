# NotesOS Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# Application
# ===========================================
DEBUG=true

# ===========================================
# Database
# ===========================================
DATABASE_URL=postgresql+asyncpg://notesos:notesos_dev_password@localhost:5432/notesos

# ===========================================
# Redis
# ===========================================
REDIS_URL=redis://localhost:6379

# ===========================================
# JWT Authentication
# ===========================================
JWT_SECRET=change-this-to-a-secure-random-string
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# ===========================================
# AI Services (Required)
# ===========================================
# Get your API keys from:
# - Anthropic: https://console.anthropic.com/
# - OpenAI: https://platform.openai.com/
# - Voyage AI: https://www.voyageai.com/
# - Serper: https://serper.dev/

ANTHROPIC_API_KEY=sk-ant-...
OPENAI_API_KEY=sk-...
VOYAGE_AI_API_KEY=...
SERPER_API_KEY=...

# ===========================================
# File Storage (Cloudinary)
# ===========================================
# Get your credentials from: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=...
CLOUDINARY_API_SECRET=...
CLOUDINARY_UPLOAD_PRESET=notesos_uploads

# ===========================================
# Feature Flags
# ===========================================
ENABLE_FACT_CHECK=true
ENABLE_PRE_CLASS_RESEARCH=true
ENABLE_VOICE_GRADING=true

# ===========================================
# Frontend URL (for CORS)
# ===========================================
CORS_ORIGINS=["http://localhost:3000"]
