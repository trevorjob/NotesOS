[Unit]
Description=NotesOS Frontend (Next.js)
After=network.target

[Service]
Type=exec
User=notesos
Group=notesos
WorkingDirectory=/opt/notesos/frontend
Environment=NODE_ENV=production
Environment=PORT=3000
ExecStart=/usr/bin/npm run start
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
