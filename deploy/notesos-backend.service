[Unit]
Description=NotesOS Backend API
After=network.target postgresql.service redis-server.service
Requires=postgresql.service redis-server.service

[Service]
Type=exec
User=notesos
Group=notesos
WorkingDirectory=/opt/notesos/backend
EnvironmentFile=/opt/notesos/.env
ExecStart=/opt/notesos/backend/venv/bin/uvicorn app.main:app \
    --host 127.0.0.1 \
    --port 8000 \
    --workers 3
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
